<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gientech.iot.user.biz.mapper.DepartmentMapper">

    <select id="list" resultType="com.gientech.iot.user.biz.entity.SysDepartment"
            parameterType="com.gientech.iot.user.api.pojo.dto.DepartmentSearchDTO">
        select d.*
        from sys_department d
        where d.is_delete = 0
        <if test="dto.departmentName != null and dto.departmentName != ''">
            and d.department_name like concat('%', #{dto.departmentName}, '%')
        </if>
        <if test="dto.isEnable != null">
            and d.is_enable = #{dto.isEnable}
        </if>
        <if test="dto.excludeParentId != null">
            and not find_in_set(#{dto.excludeParentId}, d.ids)
        </if>
    </select>

    <select id="getDeptListByEnterpriseId" resultType="com.gientech.iot.user.biz.entity.SysDepartment">
        select *
        from sys_department
        where is_delete = 0
        and enterprise_id = #{enterpriseId}
    </select>

    <select id="getDeptListByParentIds" resultType="com.gientech.iot.user.biz.entity.SysDepartment">
        select *
        from sys_department
        where is_delete = 0
        <foreach collection="parentIds" item="item"  index="index" open=" AND (" close=")" separator=" OR ">
            find_in_set(#{item},  ids)
        </foreach>
        <if test="showParent != null and showParent == false">
            and id not in
            <foreach collection="parentIds" item="item" separator="," open="(" close=")">
                #{item}
            </foreach>
        </if>
    </select>

</mapper>