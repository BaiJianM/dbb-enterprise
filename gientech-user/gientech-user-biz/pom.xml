<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>gientech-user</artifactId>
        <groupId>com.gientech.iot</groupId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>gientech-user-biz</artifactId>

    <dependencies>
        <!--user模块api-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-user-api</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!--database模块-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-database</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!--web依赖包，去除自带的logging依赖-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <!--redis模块-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-redis</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!--swagger模块-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-swaggerdoc</artifactId>
            <version>1.0.0</version>
            <exclusions>
                <exclusion>
                    <groupId>io.swagger.core.v3</groupId>
                    <artifactId>swagger-annotations</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <!--参数校验注解-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <!--springboot程序监控管理-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <!--nacos组件-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-nacos</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!--web全局配置模块-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-web-configuration</artifactId>
            <version>1.0.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
                <configuration>
                    <excludes>
                        <exclude>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>