<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>gientech-demo</artifactId>
        <groupId>com.gientech.iot</groupId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <!--框架测试模块服务子模块-->
    <artifactId>gientech-demo-biz</artifactId>

    <dependencies>
        <!--demo模块api-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-demo-api</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!--test模块api-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-test-api</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!--user模块api-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-user-api</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!--框架web开发启动依赖-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-web-starter</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!--xxl-job-->
        <!--<dependency>-->
        <!--    <groupId>com.gientech.iot</groupId>-->
        <!--    <artifactId>gientech-xxljob</artifactId>-->
        <!--    <version>1.0.0</version>-->
        <!--</dependency>-->
        <!--seata组件-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-seata</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!--stream消息队列-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-stream</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!--websocket-->
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-websocket</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!--热部署-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
        </dependency>
        <dependency>
            <groupId>com.gientech.iot</groupId>
            <artifactId>gientech-sentinel</artifactId>
            <version>1.0.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
                <configuration>
                    <excludes>
                        <exclude>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>